<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginStart="18dp"
    android:layout_marginEnd="18dp" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backFromAddMeeting"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:text="@string/new_meeting"
            android:gravity="center"
            android:background="@drawable/ic_baseline_arrow_back_24"
            android:backgroundTint="@color/black"
            android:textSize="36sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:layout_marginStart="16dp"
            android:text="@string/new_meeting"
            android:gravity="start|center"
            android:textSize="36sp" />

    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/addMeetingActivity_meetingSubjectTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="@string/title"
            android:hint="@string/title"
            android:inputType="text"
            tools:ignore="SpeakableTextPresentCheck" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/addMeetingActivity_meetingStartDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="@string/date_of_meeting_start"
            android:hint="@string/date_of_meeting_start"
            android:inputType="date"
            tools:ignore="SpeakableTextPresentCheck" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/addMeetingActivity_meetingEndDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="@string/date_of_meeting_end"
            android:hint="@string/date_of_meeting_end"
            android:inputType="date"
            tools:ignore="SpeakableTextPresentCheck" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/addMeetingActivity_meetingSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="@string/subject"
            android:hint="@string/date_of_meeting_end"
            android:inputType="textMultiLine"
            android:lines="4"
            android:minLines="4"
            tools:ignore="SpeakableTextPresentCheck" />

    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/addMeetingActivity_meetingCreate"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/MainColor"
        android:text="@string/create_meeting"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="normal" />

    </LinearLayout>