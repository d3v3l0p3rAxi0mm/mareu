<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".controllers.viewpager.ViewPagerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp" >

        <LinearLayout
            android:id="@+id/meetingFragment_mainLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp" >

            <ImageView
                android:id="@+id/meetingFragment_placePhoto"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:contentDescription="@string/place_photo"
                android:src="@drawable/coruscant"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:orientation="horizontal"
                    android:paddingStart="8dp"
                    tools:context=".controllers.viewpager.ViewPagerActivity">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:background="@drawable/ic_baseline_calendar_today_24"
                        android:contentDescription="@string/duration" />

                    <TextView
                        android:id="@+id/meetingFragment_startMeeting"
                        android:layout_gravity="top"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="start|center"
                        android:textSize="14sp"
                        android:text="" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:background="@drawable/ic_baseline_access_time_24"
                        android:contentDescription="@string/duration" />

                    <TextView
                        android:id="@+id/meetingFragment_time"
                        android:layout_gravity="top"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="start|center"
                        android:textSize="14sp"
                        android:text="" />

                </LinearLayout>

                <TextView
                    android:id="@+id/meetingFragment_subjectTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    android:text="" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="8dp"
                    android:background="@color/MainColor"
                    android:contentDescription="@string/separator" />

                <TextView
                    android:id="@+id/meetingFragment_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="" />

                <TextView
                    android:id="@+id/meetingFragment_emails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textSize="10sp"
                    android:text="" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/meetingFragment_delete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/MainColor"
            android:src="@drawable/ic_baseline_delete_grey_24"
            />

    </LinearLayout>

</LinearLayout>