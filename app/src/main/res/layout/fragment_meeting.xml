<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".views.viewpager.ViewPagerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="8dp" >

        <LinearLayout
            android:id="@+id/meetingFragment_mainLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp">

            <ImageView
                android:id="@+id/meetingFragment_placePhoto"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:contentDescription="@string/place_photo"
                android:src="@drawable/coruscant"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:orientation="horizontal"
                    android:paddingStart="8dp"
                    tools:context=".views.viewpager.ViewPagerActivity">

    <!--                <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_baseline_people_alt_24"
                        android:backgroundTint="@color/SecondaryColor"
                        android:contentDescription="@string/numberofparticipants" />

                    <TextView
                        android:id="@+id/meetingFragment_numberOfParticipants"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="52dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="start|center"
                        android:textSize="16sp"
                        android:text="12/36" />
                        -->

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_baseline_calendar_today_24"
                        android:contentDescription="@string/duration" />

                    <TextView
                        android:id="@+id/meetingFragment_startMeeting"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="52dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="start|center"
                        android:textSize="14sp"
                        android:text="12/06" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_baseline_access_time_24"
                        android:contentDescription="@string/duration" />

                    <TextView
                        android:id="@+id/meetingFragment_time"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="52dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="8dp"
                        android:gravity="start|center"
                        android:textSize="14sp"
                        android:text="20:30" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="@drawable/ic_baseline_timelapse_24"
                        android:contentDescription="@string/duration" />

                    <TextView
                        android:id="@+id/meetingFragment_duration"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="52dp"
                        android:gravity="start|center"
                        android:layout_marginStart="4dp"
                        android:textSize="14sp"
                        android:text="360'" />

                </LinearLayout>


                <TextView
                    android:id="@+id/meetingFragment_subjectTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:layout_marginStart="8dp"
                    android:text="Titre" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="8dp"
                    android:background="@color/MainColor"
                    android:contentDescription="@string/separator" />

                <TextView
                    android:id="@+id/meetingFragment_place"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Salle de rÃ©union" />

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/meetingFragment_delete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/MainColor"
            android:src="@drawable/ic_baseline_delete_forever_24" />

    </LinearLayout>

</LinearLayout>