<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/participantFragment_LinearLayout"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:orientation="horizontal"
    android:layout_margin="8dp"
    tools:context=".views.viewpager.ViewPagerActivity">

    <ImageView
        android:id="@+id/participantFragment_avatar"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:contentDescription="@string/participant_avatar" />

    <ImageView
        android:id="@+id/participantFragment_colorModuloFlagVertical"
        android:layout_width="4dp"
        android:layout_height="128dp"
        android:layout_marginStart="8dp"
        android:background="#ffcccccc"
        android:contentDescription="@string/participant_avatar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="128dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/participantFragment_fullname"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:textSize="22sp"
            android:gravity="bottom"
            android:text="" />

        <TextView
            android:id="@+id/participantFragment_email"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:textSize="16sp"
            android:text="" />

        <ImageView
            android:id="@+id/participantFragment_colorModuloFlagHorizontal"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="#ffcccccc"
            android:contentDescription="@string/participant_avatar" />

    </LinearLayout>

</LinearLayout>