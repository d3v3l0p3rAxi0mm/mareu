<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="8dp"
    android:layout_marginBottom="8dp"
    tools:context=".views.viewpager.ViewPagerActivity">

    <ImageView
        android:id="@+id/placeFragment_placePhoto"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:contentDescription="@string/place_photo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".views.viewpager.ViewPagerActivity">

        <TextView
            android:id="@+id/placeFragment_place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginStart="8dp"
            android:text="" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:background="@color/SecondaryColor"
            android:contentDescription="@string/separator" />

        <TextView
            android:id="@+id/placeFragment_numberOfParticipants"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:drawableStart="@drawable/ic_baseline_people_alt_24"
            android:drawablePadding="5dp"
            android:layout_marginStart="8dp"
            android:layout_gravity="start"
            android:gravity="center"
            android:textSize="16sp"
            android:text="" />

    </LinearLayout>

</LinearLayout>