<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/MainColor"
    tools:context=".controllers.MainActivity"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="top"
        android:background="@color/MainColor"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/mareu"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:contentDescription="@string/logo_lamzone_mareu" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            android:text="@string/mainActicityLandFooterText"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/MainLightColor"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginBottom="8dp"
            android:text="@string/login"
            android:gravity="bottom|center_horizontal"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/MainColor" />

        <EditText
            android:id="@+id/mainactivity_loginField"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@color/white"
            android:inputType="text"
            android:gravity="center"
            android:textSize="16sp"
            android:autofillHints="login"
            android:hint="@string/login"
            android:text="@string/maxime" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginBottom="8dp"
            android:text="@string/password"
            android:gravity="bottom|center_horizontal"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/MainColor" />

        <EditText
            android:id="@+id/mainactivity_passwordField"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@color/white"
            android:inputType="textPassword"
            android:gravity="center"
            android:textSize="16sp"
            android:autofillHints="password"
            android:hint="@string/password"
            android:text="@string/_1234"/>

        <Button
            android:id="@+id/mainactivity_connexion"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@color/MainColor"
            android:text="@string/connexion"
            android:textStyle="bold"
            android:textColor="@color/white" />



    </LinearLayout>


    </LinearLayout>